generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FilterState {
  scope           String           @id // "global", "employee-number", "deployment-type", "average-tenure"
  dateRangeFrom   DateTime?
  dateRangeTo     DateTime?
  tenure          Int?
  location        String?
  employmentType  EmploymentType?
  workArrangement WorkArrangement?
  updatedAt       DateTime         @updatedAt

  @@map("filter_states")
}

enum EmploymentType {
  fulltime
  parttime
  contractor
  intern
}

enum WorkArrangement {
  hybrid
  onsite
  remote
}
